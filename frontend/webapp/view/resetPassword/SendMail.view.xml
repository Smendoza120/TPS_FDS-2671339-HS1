<mvc:View
    controllerName="com.marketsystem.marketsystem.controller.resetPassword.SendMail"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page showHeader="false">
        <content>
            <FlexBox
                alignItems="Center"
                justifyContent="Center"
                width="100%"
                height="100vh"
                direction="Column"
            >
                <FlexBox
                    alignItems="Center"
                    justifyContent="Center"
                    direction="Column"
                    backgroundDesign="Solid"
                    width="50%"
                    height="50VH"
                >
                    <Title
                        text="{i18n>SendMailTitle}"
                        titleStyle="H2"
                        class="sapUiSmallMarginBottom"
                    />

                    <VBox
                        alignItems="Center"
                        justifyContent="Center"
                        backgroundDesign="Solid"
                        width="100%"
                    >
                        <VBox
                            class="sapUiSmallMarginBottom"
                            width="80%"
                        >
                            <Input
                                id="sendMail"
                                placeholder="correo@gmail.com"
                                width="100%"
                            />
                        </VBox>

                        <HBox>
                            <Button
                                text="{i18n>SendMailSendCode}"
                                type="Acept"
                                icon="sap-icon://email"
                                press=".oSendMail"
                            />

                            <Button
                                class="sapUiSmallMarginBegin"
                                icon="sap-icon://cancel"
                                text="{i18n>SendMailCancel}"
                                press=".onLonIn"
                                type="Negative"
                            />
                        </HBox>
                    </VBox>
                </FlexBox>
            </FlexBox>
        </content>
    </Page>
</mvc:View>