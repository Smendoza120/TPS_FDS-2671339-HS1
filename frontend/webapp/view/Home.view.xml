<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="com.marketsystem.marketsystem.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
        showHeader="true"
    >
        <headerContent>
            <Button
                text="{i18n>HomeCloseSession}"
                icon="sap-icon://decline"
                iconFirst="true"
                press=".goFinishSession"
            />
        </headerContent>
        <content>
            <!-- creacion usuarios -->
            <GenericTile
                class="sapUiSmallMarginTop sapUiSmallMarginBegin"
                header="{i18n>HomeItemUsers}"
                press=".goToUsersPage"
            >
                <TileContent>
                    <core:Icon
                        src="sap-icon://employee"
                        size="3rem"
                    />
                </TileContent>
            </GenericTile>

            <!-- Inventario -->
            <GenericTile
                class="sapUiSmallMarginTop sapUiSmallMarginBegin"
                header="{i18n>HomeItemInventory}"
                press=".goToInventoryPage"
            >
                <TileContent>
                    <core:Icon
                        src="sap-icon://inventory"
                        size="3rem"
                    />
                </TileContent>
            </GenericTile>
            <!-- Control ventas diario -->
            <GenericTile
                class="sapUiSmallMarginTop sapUiSmallMarginBegin"
                header="{i18n>HomeItemDailySales}"
                press=".goToDailySales"
            >
                <TileContent>
                    <core:Icon
                        src="sap-icon://sales-document"
                        size="3rem"
                    />
                </TileContent>
            </GenericTile>
            <!-- Facturacion -->
            <GenericTile
                class="sapUiSmallMarginTop sapUiSmallMarginBegin"
                header="{i18n>HomeItemBilling}"
            >
                <TileContent>
                    <core:Icon
                        src="sap-icon://receipt"
                        size="3rem"
                    />
                </TileContent>
            </GenericTile>
        </content>
    </Page>
</mvc:View>
