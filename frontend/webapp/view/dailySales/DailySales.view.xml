<mvc:View
    controllerName="com.marketsystem.marketsystem.controller.dailySales.DailySales"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:table="sap.ui.table"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page backgroundDesign="List">
        <headerContent>
            <Bar>
                <contentRight>
                    <Button
                        id="editList"
                        text="{i18n>ListInventoryEdit}"
                        icon="sap-icon://edit"
                        type="Accept"
                        press=".editInformation"
                    />
                    <Button
                        id="aceptChanges"
                        icon="sap-icon://accept"
                        type="Accept"
                        text="{i18n>ListInventoryAceptChanges}"
                        visible="false"
                        press=".aceptChanges"
                    />
                    <Button
                        id="cancelChanges"
                        icon="sap-icon://cancel"
                        type="Negative"
                        text="{i18n>ListInventoryCancelChanges}"
                        visible="false"
                        press=".cancelChanges"
                    />
                    <Button
                        id="deleteProducts"
                        icon="sap-icon://delete"
                        type="Negative"
                        text="{i18n>ListInventoryDeleteProducts}"
                        visible="false"
                        press=".onDeleteSelectedProducts"
                    />
                </contentRight>
            </Bar>
        </headerContent>
        <FlexBox
            alignItems="Center"
            justifyContent="Center"
            width="100%"
            height="100%"
            direction="Column"
        >
            <Title
                text="{i18n>DailySalesTitle}"
                level="H2"
                titleStyle="H2"
                class="sapUiMediumMarginBottom"
            />

            <HBox
                justifyContent="SpaceBetween"
                alignItems="Center"
                width="100%"
            >
                <HBox
                    class="sapUiSmallMarginBegin"
                    width="48%"
                    justifyContent="SpaceBetween"
                >
                    <VBox>
                        <Label text="{i18n>DailySalesQuantity}" />
                        <Input
                            id="quantityId"
                            placeholder="10" />
                    </VBox>

                    <VBox>
                        <Label text="{i18n>DailySalesProduct}" />
                        <Input
                            id="productId"
                            placeholder="Doritos" />
                    </VBox>

                    <VBox
                        alignContent="Center"
                        justifyContent="End"
                    >
                        <!-- Se encarga de crear la lista de ventas y agregar productos si esta
                        lista esta creada por usuario -->
                        <Button
                            text="{i18n>DailySalesAddProduct}"
                            type="Emphasized"
                            icon="sap-icon://create-form"
                            press=".onConfirmSaleCLick"
                        />
                    </VBox>
                </HBox>

                <HBox
                    class="sapUiSmallMarginEnd"
                    alignContent="End"
                    justifyContent="SpaceBetween"
                    width="24%"
                >
                    <VBox
                        justifyContent="End"
                        alignItems="End"
                    >
                        <!-- Nos encargamos de la creacion del usuario, abrimos una ventana
                        emergente y ahi lo creamos -->
                        <Button
                            id="createCustomer"
                            text="{i18n>DailySalesCreateCustomer}"
                            press=".createCustomerDialog" />
                    </VBox>
                    <VBox
                        justifyContent="End"
                        alignItems="End"
                    >
                        <Button
                            text="{i18n>DailySalesGenerateBill}"
                            type="Emphasized"
                            icon=""
                            press="."
                        />
                    </VBox>
                </HBox>
            </HBox>

            <table:Table
                id="productsTable"
                rows="{dailySales>/}"
            >
                <table:columns>
                    <table:Column>
                        <Label text="{i18n>DailySalesProduct}" />
                        <table:template>
                            <Input editable="{oVisibility>/isVisible}"
                                value="{dailySales>product/productName}" />
                        </table:template>
                    </table:Column>

                    <table:Column>
                        <Label text="{i18n>DailySalesQuantity}" />
                        <table:template>
                            <Input editable="{oVisibility>/isVisible}" value="{dailySales>quantity}" />
                        </table:template>
                    </table:Column>

                    <table:Column>
                        <Label text="{i18n>DailySalesDate}" />
                        <table:template>
                            <Input
                                editable="false"
                                value="{dailySales>salesDate}"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column
                        id="deleteColumn"
                        width="11rem"
                        visible="{oVisibility>/isVisible}"
                    >
                        <Label text="{i18n>DailySalesDeleteProduct}" />
                        <table:template>
                            <VBox
                                justifyContent="Center"
                                alignItems="Center"
                            >
                                <Button
                                    icon="sap-icon://delete"
                                    type="Reject"
                                    press=".onDeleteProductFromRow"
                                />
                            </VBox>
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
        </FlexBox>
    </Page>
</mvc:View>