<mvc:View
    controllerName="com.marketsystem.marketsystem.controller.dailySales.DailySales"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:table="sap.ui.table"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page backgroundDesign="List">
        <FlexBox
            alignItems="Center"
            justifyContent="Center"
            width="100%"
            height="100%"
            direction="Column"
        >
            <Title
                text="{i18n>DailySalesTitle}"
                level="H2"
                titleStyle="H2"
                class="sapUiMediumMarginBottom"
            />

            <HBox
                justifyContent="SpaceBetween"
                alignItems="Center"
                width="100%"
            >
                <HBox
                    class="sapUiSmallMarginBegin"
                    width="48%"
                    justifyContent="SpaceBetween"
                >
                    <VBox>
                        <Label text="{i18n>DailySalesQuantity}" />
                        <Input placeholder="10" />
                    </VBox>

                    <VBox>
                        <Label text="{i18n>DailySalesProduct}" />
                        <Input placeholder="Doritos" />
                    </VBox>

                    <VBox
                        alignContent="Center"
                        justifyContent="End"
                    >
                        <Button
                            text="{i18n>DailySalesAddProduct}"
                            type="Emphasized"
                            icon="sap-icon://create-form"
                        />
                    </VBox>
                </HBox>

                <HBox
                    class="sapUiSmallMarginEnd"
                    alignContent="End"
                    justifyContent="SpaceBetween"
                    width="24%"
                >
                    <VBox
                        justifyContent="End"
                        alignItems="End"
                    >
                        <Button text="{i18n>DailySalesCreateCustomer}" />
                    </VBox>
                    <VBox
                        justifyContent="End"
                        alignItems="End"
                    >
                        <Button
                            text="{i18n>DailySalesGenerateBill}"
                            type="Emphasized"
                            icon=""
                        />
                    </VBox>
                </HBox>
            </HBox>

            <table:Table >
                <table:columns>
                    <table:Column >
                        <Label text="Texto de prueba"/>
                        <table:template>
                            <Input value="Texto de prueba"/>
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
        </FlexBox>
    </Page>
</mvc:View>
