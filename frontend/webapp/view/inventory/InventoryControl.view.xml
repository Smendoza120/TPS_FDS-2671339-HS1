<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="com.marketsystem.marketsystem.controller.inventory.InventoryControl"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:table="sap.ui.table"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        showHeader="false"
        backgroundDesign="List"
    >
        <FlexBox
            alignItems="Center"
            justifyContent="Center"
            width="100%"
            height="100%"
            direction="Column"
        >
            <Title
                text="{i18n>InventoryControlTitle}"
                level="H2"
                titleStyle="H2"
                class="sapUiSmallMarginBottom"
            />

            <VBox width="80%">
                <Label text="Producto" required="true" />
                <Input
                    id="productNameInput"
                    placeholder="Doritos"
                    required="true" />

                <Label
                    text="Cantidad"
                    class="sapUiTinyMarginTop"
                    required="true"
                />
                <Input
                    id="quantityInput"
                    placeholder="2"
                    type="Number"
                    required="true"
                />

                <Label
                    text="Precio Unitario"
                    class="sapUiTinyMarginTop"
                    required="true"
                />
                <Input
                    id="priceInput"
                    placeholder="500"
                    required="true" />

                <Label
                    text="Almacenamiento"
                    class="sapUiTinyMarginTop"
                    required="true"
                />
                <Select
                    id="storageComboBox"
                    width="100%"
                    items="{oListStorage>/}"
                >
                    <core:Item
                        key="{oListStorage>id}"
                        text="{oListStorage>storage}"
                    />
                </Select>
            </VBox>

            <HBox
                class="sapUiTinyMarginTop"
                width="80%"
                alignItems="End"
                justifyContent="End"
            >
                <Button
                    text="{i18n>InventoryControlCleanProduct}"
                    type="Emphasized"
                    icon="sap-icon://not-editable"
                />
                <Button
                    text="{i18n>InventoryControlAddProduct}"
                    class="sapUiTinyMarginBegin"
                    type="Accept"
                    icon="sap-icon://write-new-document"
                    press=".onCreateProduct"
                />
            </HBox>
        </FlexBox>
    </Page>
</mvc:View>