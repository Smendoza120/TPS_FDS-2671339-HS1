<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="com.marketsystem.marketsystem.controller.users.UserList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:table="sap.ui.table"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        showHeader="true"
        backgroundDesign="List"
    >
        <headerContent>
            <Bar>
                <contentRight>
                    <Button
                        id="editInformation"
                        icon="sap-icon://edit"
                        text="{i18n>userListEditButton}"
                        press=".onEdit"
                        type="Accept"
                    />

                    <Button
                        id="aceptChanges"
                        icon="sap-icon://accept"
                        text="{i18n>userListAceptChanges}"
                        type="Accept"
                        visible="false"
                        press=".onAceptChanges"
                    />

                    <Button
                        id="cancelChanges"
                        icon="sap-icon://decline"
                        text="{i18n>userListCancelChanges}"
                        type="Negative"
                        visible="false"
                        press=".onCancelChanges"
                    />
                </contentRight>
            </Bar>
        </headerContent>

        <ScrollContainer
            horizontal="true"
            vertical="false"
        >
            <HBox
                width="100%"
                alignItems="Center"
                justifyContent="Center"
            >
                <Title
                    class="sapUiSmallMarginTop sapUiSmallMarginBottom"
                    text="{i18n>UserListSecondTitle}"
                    level="H2"
                    titleStyle="H2"
                    textAlign="Center"
                />
            </HBox>
            <table:Table
                selectionMode="MultiToggle"
                rows="{oWorkers>/}"
                id="tableWorkers"
                busyIndicatorDelay="0"
            >
                <table:extension>
                    <Bar>
                        <contentRight class="sapUiSmallMarginBottom">
                            <SearchField width="250px" />
                        </contentRight>
                    </Bar>
                </table:extension>
                <table:columns>
                    <table:Column
                        width="8rem"
                        hAlign="Center"
                    >
                        <Label text="{i18n>UserListName}" />
                        <table:template>
                            <Input
                                value="{oWorkers>user/firstName}"
                                editable="{oUserList>/isEditable}"
                                visible="{oUserList>/isVisible}"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column
                        width="8rem"
                        hAlign="Center"
                    >
                        <Label text="{i18n>userListLastName}" />
                        <table:template>
                            <Input
                                value="{oWorkers>user/lastName}"
                                editable="{oUserList>/isEditable}"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column
                        width="8rem"
                        hAlign="Center"
                    >
                        <Label text="{i18n>UserListPass}" />
                        <table:template>
                            <Input
                                value="{oWorkers>password}"
                                type="Password"
                                editable="{oUserList>/isEditable}"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column
                        width="15rem"
                        hAlign="Center"
                    >
                        <Label text="{i18n>UserListMail}" />
                        <table:template>
                            <Input
                                value="{oWorkers>user/email}"
                                type="Email"
                                editable="{oUserList>/isEditable}"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column
                        width="9rem"
                        hAlign="Center"
                    >
                        <Label text="{i18n>UserListPhone}" />
                        <table:template>
                            <Input
                                value="{oWorkers>user/phone}"
                                type="Tel"
                                editable="{oUserList>/isEditable}"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column
                        width="10rem"
                        hAlign="Center"
                    >
                        <Label text="{i18n>UserListBilling}" />
                        <table:template>
                            <Switch
                                state="{oWorkers>billsPermission}"
                                enabled="{oUserList>/isEditable}"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column
                        width="10rem"
                        hAlign="Center"
                    >
                        <Label text="{i18n>UserListUserCreate}" />
                        <table:template>
                            <Switch
                                state="{oWorkers>usersPermission}"
                                enabled="{oUserList>/isEditable}"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column
                        width="8rem"
                        hAlign="Center"
                    >
                        <Label text="{i18n>UserListDailySales}" />
                        <table:template>
                            <Switch
                                state="{oWorkers>salesPermission}"
                                enabled="{oUserList>/isEditable}"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column
                        width="8rem"
                        hAlign="Center"
                    >
                        <Label text="{i18n>UserListInventory}" />
                        <table:template>
                            <Switch
                                state="{oWorkers>inventoryPermission}"
                                enabled="{oUserList>/isEditable}"
                            />
                        </table:template>
                    </table:Column>

                    <table:Column
                        width="8rem"
                        hAlign="Center"
                        visible="{oUserList>/isEditable}"
                    >
                        <Label text="{i18n>UserListInventory}" />
                        <table:template>
                            <Button icon="sap-icon://delete" />
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
        </ScrollContainer>
    </Page>
</mvc:View>
