<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="com.marketsystem.marketsystem.controller.users.UserList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:table="sap.ui.table"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page showHeader="false">
        <FlexBox
            width="100%"
            height="100%"
            alignItems="Center"
            justifyContent="Center"
            backgroundDesign="Solid"
        >
            <table:Table selectionMode="MultiToggle">
                <table:extension>
                    <Bar>
                        <contentRight class="sapUiSmallMarginBottom">
                            <SearchField width="250px" />
                            <Button
                                icon="sap-icon://edit"
                                text="{i18n>userListEditButton}"
                            />
                        </contentRight>
                    </Bar>
                </table:extension>
                <table:columns>
                    <table:Column>
                        <Label text="{i18n>UserListName}" />
                        <table:template>
                            <Text text="Prueba" />
                        </table:template>
                    </table:Column>

                    <table:Column>
                        <Label text="{i18n>UserListMail}" />
                        <table:template>
                            <Text text="Prueba" />
                        </table:template>
                    </table:Column>

                    <table:Column>
                        <Label text="{i18n>UserListPosition}" />
                        <table:template>
                            <Text text="Prueba" />
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:Table>
        </FlexBox>
    </Page>
</mvc:View>
