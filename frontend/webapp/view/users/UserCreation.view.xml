<mvc:View
    xmlns:macros="sap.fe.macros"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="com.marketsystem.marketsystem.controller.users.UserCreation"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        showHeader="true"
        backgroundDesign="List"
    >
        <FlexBox
            width="100%"
            height="100%"
            alignItems="Center"
            justifyContent="Center"
            backgroundDesign="Solid"
            direction="Column"
        >
            <Title
                text="{i18n>UserCreationTitle}"
                level="H2"
                titleStyle="H2"
            />

            <VBox
                width="80%"
                class="sapUiSmallMarginTop"
            >
                <Label text="{i18n>UserCreationName}" />
                <Input
                    id="firstName"
                    placeholder="Carlos"
                    valueLiveUpdate="true"
                    value="{formWorker>/user/firstName}"
                />

                <Label
                    text="{i18n>UserCreationLastName}"
                    class="sapUiTinyMarginTop"
                />
                <Input
                    id="lastName"
                    placeholder="Sanchez"
                    valueLiveUpdate="true"
                    value="{formWorker>/user/lastName}"
                />

                <Label
                    text="{i18n>UserCreationPass}"
                    class="sapUiTinyMarginTop"
                />
                <Input
                    id="pass"
                    placeholder="*******"
                    type="Password"
                    valueLiveUpdate="true"
                    value="{formWorker>/password}"
                />

                <Label
                    text="{i18n>UserCreationMail}"
                    class="sapUiTinyMarginTop"
                />
                <Input
                    id="email"
                    placeholder="carlos.sanchez@gmail.com"
                    type="Email"
                    valueLiveUpdate="true"
                    value="{formWorker>/user/email}"
                />

                <Label
                    text="{i18n>UserCreationPhone}"
                    class="sapUiTinyMarginTop"
                />
                <Input
                    id="phone"
                    placeholder="3118047047"
                    type="Tel"
                    valueLiveUpdate="true"
                    value="{formWorker>/user/phone}"
                />
            </VBox>

            <FlexBox
                class="sapUiSmallMarginTop"
                alignItems="Start"
                justifyContent="Start"
                direction="Row"
            >
                <VBox
                    direction="Column"
                    alignItems="Start"
                    justifyContent="Start"
                    wrap="Wrap"
                >
                    <HBox
                        justifyContent="Start"
                        alignItems="Center"
                        direction="RowReverse"
                    >
                        <Label
                            required="true"
                            text="{i18n>UserCreationDailySales}"
                        />
                        <Switch
                            id="salesPermission"
                            state="{formWorker>/salesPermission}"
                        />
                    </HBox>

                    <HBox
                        justifyContent="Start"
                        alignItems="Center"
                        direction="RowReverse"
                    >
                        <Label text="{i18n>UserCreationBilling}" />
                        <Switch
                            id="billsPermission"
                            state="{formWorker>/billsPermission}"
                        />
                    </HBox>
                </VBox>

                <VBox
                    class="sapUiTinyMarginBegin"
                    direction="Column"
                    alignItems="Center"
                    justifyContent="Start"
                >
                    <HBox
                        justifyContent="Start"
                        alignItems="Center"
                        direction="RowReverse"
                    >
                        <Label text="{i18n>UserCreationUserCreate}" />
                        <Switch
                            id="usersPermission"
                            state="{formWorker>/usersPermission}"
                        />
                    </HBox>

                    <HBox
                        justifyContent="Start"
                        alignItems="Center"
                        direction="RowReverse"
                    >
                        <Label text="{i18n>UserCreationInventory}" />
                        <Switch
                            id="inventoryPermission"
                            state="{formWorker>/inventoryPermission}"
                        />
                    </HBox>
                </VBox>
            </FlexBox>

            <HBox
                width="80%"
                class="sapUiSmallMarginTop"
                alignItems="Center"
                justifyContent="End"
            >
                <Button
                    width="100px"
                    text="{i18n>UserCreationCancelUser}"
                    icon="sap-icon://sys-cancel"
                    type="Negative"
                    press=".onCancel"
                />

                <Button
                    class="sapUiTinyMarginBegin"
                    width="100px"
                    text="{i18n>UserCreationCreateUser}"
                    icon="sap-icon://accept"
                    type="Accept"
                    press=".createUser"
                />
            </HBox>
        </FlexBox>
    </Page>
</mvc:View>
