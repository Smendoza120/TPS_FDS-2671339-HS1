<mvc:View
    xmlns:macros="sap.fe.macros"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    controllerName="com.marketsystem.marketsystem.controller.users.UserCreation"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        showHeader="false"
        title="{i18n>UserCreationTitle}"
    >
        <FlexBox
            width="100%"
            height="100%"
            alignItems="Center"
            justifyContent="Center"
            backgroundDesign="Solid"
            direction="Column"
        >
            <Title
                text="Creacion de usuarios"
                level="H2"
                titleStyle="H2"
            />

            <VBox
                width="80%"
                class="sapUiSmallMarginTop"
            >
                <Label text="{i18n>UserCreationName}" />
                <Input placeholder="Carlos" />

                <Label
                    text="{i18n>UserCreationPass}"
                    class="sapUiTinyMarginTop"
                />
                <Input
                    placeholder="*******"
                    type="Password"
                />

                <Label
                    text="{i18n>UserCreationMail}"
                    class="sapUiTinyMarginTop"
                />
                <Input
                    placeholder="Carlos"
                    type="Email"
                />

                <Label
                    text="{i18n>UserCreationPhone}"
                    class="sapUiTinyMarginTop"
                />
                <Input
                    placeholder="3118047047"
                    type="Tel"
                />

                <Label
                    text="{i18n>UserCreationPosition}"
                    class="sapUiTinyMarginTop"
                />
                <Select width="100%">
                    <core:ListItem text="prueba" />
                    <core:ListItem text="prueba2" />
                </Select>
            </VBox>

            <FlexBox
                class="sapUiSmallMarginTop"
                alignItems="Start"
                justifyContent="Start"
                direction="Row"
            >
                <VBox
                    direction="Column"
                    alignItems="Start"
                    justifyContent="Start"
                    wrap="Wrap"
                >
                    <HBox
                        justifyContent="Start"
                        alignItems="Center"
                        direction="RowReverse"
                    >
                        <Label
                            required="true"
                            text="{i18n>UserCreationDailySales}"
                        />
                        <Switch />
                    </HBox>
                    
                    <HBox
                        justifyContent="Start"
                        alignItems="Center"
                        direction="RowReverse"
                    >
                        <Label text="{i18n>UserCreationBilling}" />
                        <Switch />
                    </HBox>
                </VBox>

                <VBox
                    class="sapUiTinyMarginBegin"
                    direction="Column"
                    alignItems="Center"
                    justifyContent="Start"
                >
                    <HBox
                        justifyContent="Start"
                        alignItems="Center"
                        direction="RowReverse"
                    >
                        <Label text="{i18n>UserCreationUserCreate}" />
                        <Switch />
                    </HBox>

                    <HBox
                        justifyContent="Start"
                        alignItems="Center"
                        direction="RowReverse"
                    >
                        <Label text="{i18n>UserCreationInventory}" />
                        <Switch />
                    </HBox>
                </VBox>
            </FlexBox>

            <HBox
                width="80%"
                class="sapUiSmallMarginTop"
                alignItems="Center"
                justifyContent="End"
            >
                <Button
                    width="100px"
                    text="{i18n>UserCreationCancelUser}"
                    icon="sap-icon://sys-cancel"
                    type="Negative"
                />

                <Button
                    class="sapUiTinyMarginBegin"
                    width="100px"
                    text="{i18n>UserCreationCreateUser}"
                    icon="sap-icon://accept"
                    type="Accept"
                />
            </HBox>
        </FlexBox>
    </Page>
</mvc:View>
